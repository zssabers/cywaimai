@import "../../../wuBaseWxss/7.wxss";

.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
}
.btn {
-moz-appearance: none;
background: rgba(0,0,0,0) none repeat scroll 0 0;
border-radius: 10rpx;
box-sizing: border-box;
cursor: pointer;
font-family: inherit;
font-size: 30rpx;
height: 80rpx;
line-height: 76rpx;
padding: 0 20rpx;
position: relative;
text-align: center;
text-decoration: none;
text-overflow: ellipsis;
white-space: nowrap;
border:none;
user-select: none;
transition-duration: 300ms;
transition-property: background-color;
display: inline-block;
z-index: 100;
margin-right: 15rpx;

}

.bottom-bar navigator {
    background: #ff4544;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
}

.edit-row {
    background: #fff;
    height: 100rpx;
    border-bottom: 1rpx solid #eeeeee;
    padding: 0 24rpx;
}

.edit-row:first-child {
    border-top: 1rpx solid #eeeeee;
}

.edit-row .row-label {
    margin-right: 24rpx;
    min-width: 140rpx;
}

.get-wechat-address {
    text-align: center;
    background: #5B9BFF;
    color: #fff;
    padding: 18rpx 0;
    margin: 32rpx 24rpx;
    border-radius: 10rpx;
    display: block;
}

.get-wechat-address:active {
    opacity: .85;
}

.weui-select {
    border-right: none;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
}

.weui-btn {
    background-color: #5B9BFF;
    color: white;
}

.btn {
    position: absolute;
    bottom: 550rpx;
    width: 90%;
    left: 5%;
}

button {
    font-size: 13pt;
    font-family: inherit;
}

.dt {
    width: 45rpx;
    height: 45rpx;
    margin-right: 30rpx;
}

.radio {
    margin-right: 20rpx;
}

