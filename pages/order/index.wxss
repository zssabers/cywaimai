@import "../../wuBaseWxss/8.wxss";

page {
    background: #f7f7f7;
}
.flex-y-center {
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-align: center;
-ms-flex-align: center;
-ms-grid-row-align: center;
align-items: center;
justify-content: center;
}

.swiper-tab {
  background: #fff;
  position: fixed;
  padding: 0rpx 120rpx;
  top: 0;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  color: #ccc;
  z-index: 9999999999;
  font-size: 28rpx;
}


.swiper-tab-item {
  padding: 0 20rpx;
  color: #ccc;
}

.actives {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 4rpx solid #FF7D5C;
}
.goods-info {
    width: auto;
}
.fui-tab-scroll.fixed {
position: fixed;
top: 60rpx;
z-index: 1000;
height: 120rpx;
border-top: 30rpx solid #F8F8F8;

}

.navbar {
    position: none;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 115rpx;
    background: #F8F8F8;
    color: #555;
    z-index: 2000;
    border-top: 0rpx solid rgba(0,0,0,.1);
    box-sizing: border-box;
}
.contain {
    margin-top: 151rpx;
    width: 100%;
    padding: 30rpx 24rpx;
}
.fui-list-group {
    background-color: #fff;
    position: relative;
    margin-top: 20rpx;
    border-radius: 10rpx;
}
.fui-tab-scroll .item.active:before {
content: "";
height: 4rpx;
width: 100%;
background: #fff;
position: absolute;
bottom: 0;
left: 0;
z-index: 1;

}

.order .btn {
    margin: 10rpx 0 10rpx 20rpx;
    padding: 0 26rpx;
    height: 56rpx;
    line-height: 54rpx;
    font-size: 26rpx;
}

.order .empty {
    padding: 260rpx 150rpx;
    font-size: 34rpx;
}

.order .empty .btn {
    margin: 0;
    border-radius: 100rpx;
    height: 76rpx;
    line-height: 76rpx;
    width: 280rpx;
    font-size: 30rpx;
    padding: 0;
}

.order .light {
    height: 240rpx;
    width: 240rpx;
}

.order .text-cancel {
    padding: 10rpx;
    margin-bottom: 30rpx;
    margin-top: 25rpx;
    font-size: 30rpx;
}

.order .order-num {
    flex: 1;
}

.fui-tab-scroll .item {
    padding: 0 30rpx;
}

.order .fui-list-inner .subtitle {
    line-height: 44rpx;
}

.no-border .fui-list-inner .subtitle {
    line-height: 1.5;
}

.fui-list-inner.text-right:empty {
    display: none;
}

.row-remark {
    text-align: right;
    position: relative;
    flex-shrink: 0;
    padding-left: 20rpx;
    color: #aaa;
    font-size: 26rpx;
    line-height: 1.5;
}