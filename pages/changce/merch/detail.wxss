.page{
  background: #fff;
}
.banner{ width: 100%; height: 400rpx; background: #f2f2f2;}
.detail-hard {
    width: 100%;
    height:200rpx;
    background-size: 100%;
}
.fui-goods-group.block .fui-goods-item .image { border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;  }
.fui-goods-item .detail { border-bottom-left-radius: 20rpx;border-bottom-right-radius: 20rpx;}
.detail-hard .fui-list {
    padding-top:40rpx;
}

.detail-hard .fui-list .subtitle,.detail-hard .fui-list .text {
    color: black;
}

.detail-tab {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding: 0.4rem 0;
}

.detail-tab navigator {
    display: flex;
    flex-direction: column;
    width: 25%;
    font-size: 28rpx;
    color: #666666;
}

.detail-tab .on {
    color: #FF9B35;
}

.detail-tab image {
    width: 1rem;
    height: 1rem;
    text-align: center;
    margin: 0 auto;
}

.detail-tab text {
    text-align: center;
}
.fui-goods-group.block {
    padding: 24rpx;
    border-radius: 10rpx;}
.address{
  width: 100%;
  height: 73rpx;
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  justify-content: space-between;
  border-top: 2rpx solid rgba(0,0,0,0.03);
}
.address_left{
  width: 90%;
  padding: 10rpx 24rpx;
  display: flex;
  height: 34rpx;
  margin-top: 19rpx;
  border-right: 2rpx solid rgba(0,0,0,0.05);

}
.location{
  width: 29rpx;
  height: 34rpx;
}
.address_left text{
  font-size:26rpx;
  padding: 0rpx 10rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.address_right{
  width: 10%;
  padding-top: 10rpx;
  padding-left:35rpx;
  display: flex;
  height: 34rpx;
  margin-top: 19rpx;
}
.swiper-container {
  position: relative;
  top: 90rpx;
}

.swiper-block {
  height:400rpx;
  width:100%;

}

.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.slide-image {
  height:400rpx;
  width:100%;

}