rich-text {
  width: 70%;
  height: 30rpx;
  background: red;
}

.tabbar view {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  align-items: center;
  flex: stretch;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tabbar view image {
  width: 40rpx;
  height: 45rpx;
  display: block;
  margin: 0rpx auto 0rpx;
}

swiper {
  width: 95%;
  height: 50rpx;
  line-height: 50rpx;
}

.head {
  width: 100%;
  height: 400rpx;
}

.head>view:nth-child(1) {
  width: 100%;
  height: 100%;
}

.head>view:nth-child(2) {
  width: 100%;
  height: 200rpx;
  top: 35rpx;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user_info>view {
  padding: 10rpx 0;
}

.user_info image {
  width: 30rpx;
  height: 30rpx;
}

.job_status {
  display: flex;
  padding: 50rpx 0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.job_status>view {
  flex: 2;
}

.job_status image {
  width: 55rpx;
}

.body {
  width: 100%;
  height: 400rpx;
  bottom: -250rpx;
}

.Entrance {
  padding: 30rpx 20rpx;
}

.Entrance image {
  width: 40rpx;
  height: 40rpx;
}
