.put_forward>view {
    width: 50%;
    box-sizing: border-box;
    text-align: center;
}

.put_forward>view:nth-child(1) {
    border-right: 2rpx solid #e5e5e5;
}

.put_forward>view view:nth-child(2) {
    padding: 10rpx 0 0 0;
}

.list image:nth-child(1) {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.list image:nth-child(3) {
    width: 20rpx;
    height: 30rpx;
    right: 20rpx;
}

.head image {
    width: 100rpx;
    height: 100rpx;
    background: orange;
    border-radius: 50%;
    margin-right: 20rpx;
    vertical-align: middle;
}

.tixian {
    padding: 7rpx 30rpx;
    border: 2rpx solid #e5e5e5;
    border-radius: 15rpx;
    right: 20rpx;
}

.mine {
    width: 160rpx;
    height: 60rpx;
    right: -20rpx;
    text-align: center;
    line-height: 60rpx;
}

.mine>text {
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
}

.mine>text:nth-child(1) {
    z-index: 10;
    background: #000;
    opacity: .3;
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
}

.mine>text:nth-child(2) {
    z-index: 20;
}